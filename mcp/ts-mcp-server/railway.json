{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run railway:build"
  },
  "deploy": {
    "startCommand": "npm run railway:start",
    "healthcheckPath": "/mcp-calculator",
    "healthcheckTimeout": 30,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  }
}
